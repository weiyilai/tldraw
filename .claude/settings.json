{
	"spinnerVerbs": {
		"mode": "replace",
		"verbs": [
			"panning",
			"zooming",
			"scrolling",
			"drawing",
			"erasing",
			"creating",
			"typing",
			"selecting",
			"deselecting",
			"duplicating",
			"nudging",
			"resizing",
			"rotating",
			"flipping",
			"stretching",
			"aligning",
			"distributing",
			"stacking",
			"packing",
			"grouping",
			"ungrouping",
			"editing",
			"cropping",
			"styling",
			"embedding"
		]
	},
	"permissions": {
		"allow": [
			"WebSearch",
			"Bash(gh pr:*)",
			"Bash(yarn install)",
			"Bash(yarn test:*)",
			"Bash(yarn lint:*)",
			"Bash(yarn typecheck)",
			"Bash(git add:*)",
			"mcp__Context7__resolve-library-id",
			"mcp__Context7__get-library-docs"
		]
	},
	"hooks": {
		"Stop": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "cd \"$(git rev-parse --show-toplevel)\" && git diff --name-only --diff-filter=ACMR | grep -E '\\.(ts|tsx|js|jsx|json|md)$' | xargs -r yarn run -T prettier --write || true"
					}
				]
			}
		]
	},
	"enabledPlugins": {}
}
